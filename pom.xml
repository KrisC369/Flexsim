		</plugins>
	</build>
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-report-plugin</artifactId>
				<version>2.16</version>
				<configuration>
					<showSuccess>true</showSuccess>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin</artifactId>
				<version>2.6</version>
			</plugin>
		</plugins>
	</reporting>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<organization>
		<name>iMinds Distrinet Kuleuven</name>
	</organization>
	<scm>
		<url>https://github.com/KrisC369/Flexsim.git</url>
		<developerConnection>scm:git:git@github.com:KrisC369/Flexsim.git</developerConnection>
		<connection>scm:git:git://github.com:KrisC369/Flexsim.git</connection>
	</scm>
	<issueManagement>
		<url>https://github.com/KrisC369/Flexsim/issues</url>
		<system>GitHub Issues</system>
